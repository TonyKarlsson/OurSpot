
<div class="chat-container chat-background" style="background-image: url('https://images.unsplash.com/photo-1606235268286-cfc161fed099?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9');">
  <div class="background-blur">
    <ul class="list-unstyled margin-from-navbar">

      <% @chatrooms.each do |chatroom| %>

      <li class="chat-card">
        <%= link_to chatroom_path(chatroom), class:"link-unstyled" do %>
        <div class="d-flex p-3">
          <img class="avatar" src="https://randomuser.me/api/portraits/thumb/men/<%=rand(1..20)%>.jpg" alt="">
          <div class="user-details ml-3">
            <%  if current_user == chatroom.friend1  %>
            <p><%= chatroom.friend2.username %></p>
            <% else %>
            <p><%= chatroom.friend1.username %></p>
            <% end %>
            <h4>📍 Spotted here</h4>
          </div>
        </div>
      </li>
    <!-- <div class="underline"></div> -->
      <% end %>

      <% end %>

    </ul>
  </div>
</div>

