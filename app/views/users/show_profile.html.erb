<div class="background">
  <div class="profile-container">
    <div class="profile-header">
      <div class="log-out-btn">
        <%= link_to destroy_user_session_path, method: :delete, class:"yellow-text"  do%>
          <p class="white-text my-2 caps-title">Log out</p>
        <% end %>
      </div>
    </div>
    <div class="section profile-content">
      <div class="profile-content-container">
        <div class="owner">
          <div class="owner-avatar">
            <% if @user.photo.attached? %>
              <%= cl_image_tag @user.photo.key, class: "img-circle img-align" %>
            <% else %>
                <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcToplStyx8pu0DsUkR-zSI6hAAN-vzcrZF0HA&usqp=CAU" alt="" class="img-circle img-align">
            <% end %>
          </div>
          <div class="name">
            <h4 class="title"><%= current_user.username %></h4>
          </div>
          <h4 class="text-left caps-title">Your Friend Requests</h4>
          <div class="friend-wrap">
            <% if current_user.requested_friends.empty? %>
              <p class="text-left">Nothing yet, time to add some friends!</p>
            <% else %>
              <% current_user.requested_friends.each do |friend| %>
                <div class="d-flex friend-request">
                  <% if friend.photo.attached? %>
                    <%= cl_image_tag friend.photo.key, class: "avatar" %>
                  <% else %>
                      <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcToplStyx8pu0DsUkR-zSI6hAAN-vzcrZF0HA&usqp=CAU" alt="" class="avatar">
                  <% end %>
                  <!-- <img src="https://images.unsplash.com/photo-1582214448344-4cb7e35711f7?ixid=MXwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHw%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=1650&q=80" alt="" class="avatar"> -->
                  <span class="ml-3 text-big"><%= friend.username %></span class="ml-3">
                  <div class="d-flex friend-icons">
    <!--                 <i class="fas fa-check mr-3 accept"><%# current_user.accept_request(friend) %></i>
                    <i class="fas fa-times reject"><%# current_user.decline_request(friend) %></i> -->
                    <%= link_to accept_path(user_id: friend.id), method: :put, class:"black" do%>
                      <i class="fas fa-check mr-4 accept"></i>
                    <% end %>
                    <%= link_to reject_path(user_id: friend.id), method: :put, class:"black" do%>
                      <i class="fas fa-times reject"></i>
                    <% end %>
                  </div>
                </div>
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
  <%= render 'shared/new_message_button' %>
</div>
