<div class="background">
  <div class="header header-index d-flex">
    <h4 style="color: white;" class="mt-3 caps-title">Add this spot</h4>
  </div>
  <div class="container-form">
    <div class="form-container">
      <%= simple_form_for @message, innerHTML: { class: "d-flex"}  do |f| %>

          <%= simple_fields_for @chatroom do |form| %>
            <%= form.label 'Choose a friend:', required: false %>
            <%= form.select :friend2, options_for_select(format_friend_list(current_user)) %>
          <% end %>
          <%= f.input :content, wrapper_html: { class: 'text-area-icon' },  label: 'Write a message:' %>

            <!-- <div class="image-upload-icon mt-2 mb-2">
            <label for="file-input">
              <i class="fas fa-plus icon-fas rnd-fas"></i>
            </label> -->

          <%= f.input :photo, :as => :file, label: 'Add a photo (if you\'d like):', class: 'mt-2' %>
          <div class="d-flex">
            <%#= link_to "Cancel", root_path, class: "btn btn-main btn-success rounded-pill w-100 mr-4"  %>
            <%= f.submit "Create", class: "btn btn-main-dark rounded-pill w-100 my-3" %>
         </div>
         <div id="map"
            style="width: 100%; height: 150px; border-radius: 15px;"
            data-markers="<%= @markers.to_json %>"
            data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
        </div>
    </div>
    <% end %>
    </div>
    <%= render 'shared/new_message_button'%>
</div>
